{
  "name": "pickle",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "turbo run test",
    "dev": "turbo run dev --parallel --no-cache",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@6.23.6",
  "lint-staged": {
    "*.config.js": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.svg": [
      "prettier --write --parser html"
    ],
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,ts}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@svgr/plugin-prettier": "^6.1.2",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "esbuild": "^0.14.10",
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0",
    "turbo": "^1.1.6",
    "typescript": "^4.5.4"
  }
}
